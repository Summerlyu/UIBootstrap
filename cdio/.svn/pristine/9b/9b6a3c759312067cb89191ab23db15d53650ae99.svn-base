var xmlHttp;	function ajaxFunction() {		try {			// Firefox, Opera 8.0+, Safari			xmlHttp = new XMLHttpRequest();		} catch (e) {			// Internet Explorer			try {				xmlHttp = new ActiveXObject("Msxml2.XMLHTTP");			} catch (e) {				try {					xmlHttp = new ActiveXObject("Microsoft.XMLHTTP");				} catch (e) {					alert("您的浏览器不支持AJAX！");					return false;				}			}		}		return xmlHttp;	}	function getRole(userId) {		xmlHttp = ajaxFunction();		xmlHttp.onreadystatechange = function() {			if (xmlHttp.readyState == 4) {				var v = xmlHttp.responseText;				//alert(v);								var rId=v.split(',');				var oCheckBoxs=document.getElementsByTagName('input');								document.getElementById("hid").value=userId;								for(var i=0;i<oCheckBoxs.length;i++){					for(var j=0;j<rId.length;j++){						if(oCheckBoxs[i].value==rId[j]){							oCheckBoxs[i].setAttribute("checked","checked");							break;						}else{							oCheckBoxs[i].removeAttribute('checked');						}						}				}																// var msg=eval("("+v+")");				// alert(msg);				// var noticeCount=msg.noticeCount;				//var mailsCount=msg.mailsCount;				// alert(noticeCount);				//document.getElementById("usernamemsg").innerHTML = xmlHttp.responseText;			}		};		//alert(val);		xmlHttp.open("get", "userRole/loadRole?userID="+userId+"&date=" + new Date(), true);        		xmlHttp.send(null);			}	   // function validateUsername() {	  //$.getJSON("user/user!checkUserName1?date=" + new Date()				//+ "&username=" + username, function(json) {		//alert("JSON Data: " + json);	 // });	//}	